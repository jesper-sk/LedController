<Window x:Class="UberLedController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UberLedController"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="510" 
        Width="662" 
        Background="#FFDADADA" 
        BorderBrush="Black" 
        Margin="1" 
        MinWidth="662" 
        MinHeight="320" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Activated="Window_Activated" 
        Deactivated="Window_Deactivated">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles\LabelStyles.xaml"/>
                <ResourceDictionary Source="Styles\MenuStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource DarkBackground}">
        <DockPanel Grid.Row="1" 
                   Background="{DynamicResource DarkBackground}"
                   HorizontalAlignment="Stretch"
                   LastChildFill="True">
            <Expander x:Name="DeviceToolbarExpander" 
                      ExpandDirection="Down"
                      VerticalAlignment="Top"
                      Padding="2,2,2,2"
                      FlowDirection="LeftToRight"
                      DockPanel.Dock="Top" 
                      HorizontalContentAlignment="Stretch">
                <Border BorderBrush="{DynamicResource DarkBoundary}" 
                        BorderThickness="1"
                        Height="55" 
                        Margin="-3,0,-3,-3"
                        HorizontalAlignment="Stretch">
                    <StackPanel Background="{DynamicResource DarkBackground}">
                        <Button Height="55"
                                HorizontalContentAlignment="Left" 
                                HorizontalAlignment="Left"
                                BorderBrush="{DynamicResource DarkBoundary}"
                                BorderThickness="1">
                            <StackPanel Margin="15,0,0,0" HorizontalAlignment="Left" Width="200">
                                <TextBlock Text="Selected Device"
                                           Foreground="{DynamicResource DarkLightAccent}"/>
                                <TextBlock Text="None"
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Expander>
            <Grid x:Name="ContentGrid" 
                  Background="{DynamicResource LightAccentColor}"
                  Margin="0,1,0,0"
                  DockPanel.Dock="Top">

            </Grid>
        </DockPanel>
        <Grid x:Name="HeaderGrid" 
              Margin="26,2,0,0"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="HeaderMenuGrid" 
                  Grid.Column="0">
                <Menu Name="menu1" 
                      IsMainMenu="True" 
                      VerticalContentAlignment="Center" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Center">
                    <MenuItem Header="_Configuration" Style="{DynamicResource TitlebarMenuStyle}">
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Doe eens een lange optie" IsCheckable="True"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="True"/>
                    </MenuItem>
                    <MenuItem Header="_Menu" Style="{DynamicResource TitlebarMenuStyle}" VerticalContentAlignment="Center">
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="True"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="True"/>
                    </MenuItem>
                </Menu>
            </Grid>
            <Grid x:Name="HeaderNameGrid" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="TitleLabel" Content="Led Controller" Style="{DynamicResource TitleLabelStyle}" Grid.Column="1" VerticalContentAlignment="Center" Padding="3,0,10,0"/>
                <Image x:Name="InFocusImage" Height="16" Source="tray16_light.png" />
                <Image x:Name="OutFocusImage" Height="16" Width="16" Source="tray16_darknew.png" Visibility="Hidden"/>
            </Grid>
            <Grid x:Name="HeaderModButtonGrid" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CloseButton" Style="{DynamicResource CloseButtonStyle}" Click="CloseButton_Click" Margin="0,2,0,2" Grid.Column="2" FontFamily="Segoe UI Symbol">&#xe21c;</Button>
                <Button x:Name="MaximizeButton" Style="{DynamicResource MinMaxButtonStyle}" Click="MaximizeButton_Click" Margin="0,2,0,2" Grid.Column="1" FontFamily="Segoe UI Symbol">&#xe20c;</Button>
                <Button x:Name="MinimizeButton" Style="{DynamicResource MinMaxButtonStyle}" Click="MinimizeButton_Click" Margin="0,2,0,2" Grid.Column="0" FontFamily="Segoe UI Symbol" FontSize="15" FontWeight="Bold" Padding="1" VerticalContentAlignment="Center">-</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
