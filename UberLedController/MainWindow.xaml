<Window x:Class="UberLedController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UberLedController"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="510" 
        Width="662" 
        Background="#FFDADADA" 
        BorderBrush="Black" 
        Margin="1" 
        MinWidth="662" 
        MinHeight="320" 
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        Activated="Window_Activated" 
        Deactivated="Window_Deactivated">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\ButtonStyles.xaml"/>
                <ResourceDictionary Source="Styles\LabelStyles.xaml"/>
                <ResourceDictionary Source="Styles\MenuStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource DarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" x:Name="TitleBarRowDefinition"/>
            <RowDefinition Height="50" x:Name="TopButtonsRowDefinition"/>
            <RowDefinition Height="*" x:Name="MainRowDefinition"/>
        </Grid.RowDefinitions>

        <Grid x:Name="HeaderGrid" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="HeaderMenuGrid" Grid.Column="0">
                <Menu Name="menu1" IsMainMenu="True" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <MenuItem Header="_Configuration" Style="{DynamicResource TitlebarMenuStyle}">
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Doe eens een lange optie" IsCheckable="True"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="True"/>
                    </MenuItem>
                    <MenuItem Header="_Menu" Style="{DynamicResource TitlebarMenuStyle}" VerticalContentAlignment="Center">
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="True"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="False"/>
                        <MenuItem Header="_Open" IsCheckable="True"/>
                    </MenuItem>
                </Menu>
            </Grid>
            <Grid x:Name="HeaderNameGrid" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="TitleLabel" Content="Led Controller" Style="{DynamicResource TitleLabelStyle}" Grid.Column="1" VerticalContentAlignment="Center" Padding="3,0,10,0"/>
                <Image x:Name="InFocusImage" Source="tray16_light.png" />
                <Image x:Name="OutFocusImage" Source="tray16_darknew.png" Visibility="Hidden"/>
            </Grid>
            <Grid x:Name="HeaderModButtonGrid" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="CloseButton" Style="{DynamicResource CloseButtonStyle}" Click="CloseButton_Click" Grid.Column="2" FontFamily="Segoe UI Symbol">&#xe21c;</Button>
                <Button x:Name="MaximizeButton" Style="{DynamicResource MinMaxButtonStyle}" Click="MaximizeButton_Click" Grid.Column="1" FontFamily="Segoe UI Symbol">&#xe20c;</Button>
                <Button x:Name="MinimizeButton" Style="{DynamicResource MinMaxButtonStyle}" Click="MinimizeButton_Click" Grid.Column="0" FontFamily="Segoe UI Symbol" FontSize="15" FontWeight="Bold" Padding="1" VerticalContentAlignment="Center">-</Button>
            </Grid>
        </Grid>

        <Grid x:Name="ButtonsGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Border BorderBrush="{DynamicResource DarkBoundary}" BorderThickness="1">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0,0,0">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource DarkLightAccent}">Selected device</TextBlock>
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{DynamicResource LightAccentColor}" FontWeight="Bold">None</TextBlock>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <Grid x:Name="ContentGrid" Grid.Row="2" Background="{DynamicResource LightAccentColor}">
            
        </Grid>
    </Grid>
</Window>
